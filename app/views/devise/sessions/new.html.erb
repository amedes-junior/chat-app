<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">

  <session class="flex flex-col items-center gap-1">
      <%=image_tag('chat.png', width:100) %>
      <h1 class="font-bold text-4xl text-white my-4">Chat App - Ruby on Rails 7</h1>
      <p class="text-center font-semibold text-white">This is the chat app with Ruby on Rails</p>
  </session>

  <section class="flex flex-col items-center">
    <h2 class="text-white font-bold text-xl mb-5">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex gap-1 my-2 item-center w-96">
        <%= f.label :email,  class:"text-white font-semibold text-sm w-24" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "text-sm font-medium rounded w-full"  %>
      </div>

      <div class="flex gap-1 my-2 item-center w-96">
        <%= f.label :password, class:"text-white font-semibold text-sm w-24" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "text-sm font-medium rounded w-full" %>
      </div>


      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Log in", data: {turbo:false}, class: "bg-green-800 rounded p-3 text-white font-semibold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>

</main>